<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    >
    <LinearLayout
        android:padding="8dp"
        android:background="#d4d4d4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/namaTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Task"/>
        <TextView
            android:id="@+id/tanggalTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tanggal Task"/>
        <TextView
            android:id="@+id/kategoriTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kategori Task"/>        
        
        <TextView
            android:id="@+id/deskripsiTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="deskripsi Task"/>

        <LinearLayout
            android:paddingTop="8dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/delBtn"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#B22222"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hapus"/>

            <Button
                android:id="@+id/editBtn"
                android:layout_marginEnd="16dp"
                android:backgroundTint="#FEBE00"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ubah"/>
            
            <Button
                android:id="@+id/actionBtn"
                android:backgroundTint="#315e26"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kerjakan"/>
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>